<h1><%=@project.name%></h1>
<body>
<img src="https://www.pngkey.com/png/full/63-634610_hands-transparent-volunteer-png.png" style="width:180px;height:142px;">
</body>
<hr>
<li><strong>Since:</strong> <%= @project.date %></li>
<li><strong>Bio:</strong> <%= @project.bio %></li>

<h3> Volunteers </h3>
<% @project.users.each do |user| %>
    <li><%= link_to user.full_name, user %> </li>
<% end %>
<br><br><br><br>
<h3> Donation total</h3>
<li><%= "$#{@project.donation_total}" %> </li>
<br>
<h3> All Donations </h3>
<% @project.donations.each do |donation| %>
    <li><%= "$#{donation.amount}" %> </li>
<% end %>

